<Window x:Class="ZST.WPF.WPFClient2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZST.WPF.WPFClient2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="SpecialButtonStyle" 
               TargetType="Button"
               BasedOn="{StaticResource DefaultButtonStyle}">

            <Setter Property="Background" Value="Green"/>

        </Style>
    </Window.Resources>
    
    <Grid>

        <StackPanel>
            <Button>Add</Button>
            <Button>Update</Button>
            <Button>Remove</Button>
            <Button Style="{StaticResource SpecialButtonStyle}">Send</Button>
            <Button Style="{StaticResource SpecialButtonStyle}">Help</Button>
        </StackPanel>

     

    </Grid>
</Window>
