<Window x:Class="ZST.WPF.WpfClient.Fundamentals.CanvasView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZST.WPF.WpfClient.Fundamentals"
        mc:Ignorable="d"
        Title="CanvasView" Height="450" Width="800">

    <Canvas>

        <Border Width="200"
                Height="100" 
               Background="Blue"
                Canvas.Left="160"
                Canvas.Top="50"
                />

        <Border 
            Width="100" 
            Height="200"
            Background="Green" 
            />

        <Button 
            Width="40"
            Height="70"
            Background="Yellow"  />


        <Button  Canvas.Left="100"
                 Background="LightSeaGreen"
            Canvas.Top="200">

            <Ellipse
           
            Width="50" Height="50" 
            Stroke="Black"
            StrokeThickness="5"
            Fill="Yellow" />
        </Button>

        <Rectangle Width="100" Height="50"
                   Stroke="Black"
                   Canvas.Left="406" 
                   Canvas.Top="244"
                   />

        <Line X1="0" Y1="0" X2="200" Y2="100"
              Stroke="Black"
              />




    </Canvas>
</Window>
